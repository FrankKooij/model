class Template <<Objecttype>> {
    + title: CharacterString [1..1] {classifier}
    + collectionSortOrder: SortOrder [1..1]
    + hasDiagrams: Boolean [0..1]
    + script
    + siteMenu: Boolean [0..1]
    + sortCode: CharacterString [1..1]
    + showNoDateItems: Boolean [1..1]
    --constraints--
    + title uniquely identifies each template
    + sortCode for site menu must be unique
''    --nederlands--
''    + mermaid
''    + sorteercode
''    + sorteren
''    + title
''    + weergevenalsdatumontbreekt
    --definition--
    Content structure of the overview page of a root collection
    --encoding--
    HTML with Liquid and YAML front matter
}

class Document <<Objecttype>> {
    + title: CharacterString [1..1] {classifier}
    + content: CharacterString [1..1]
    + date: Date [0..1]
    + description: CharacterString [0..1]
    + editor: CharacterString [0..1]
    + hasDiagrams: Boolean [0..1]
    + hasSubDocs: Boolean [0..1]
    + sortCode: CharacterString [0..1]
    + toc: TableOfContents [0..1]
    --constraints--
    + title uniquely identifies each document within a collection
    + sortCode for collection overview must be either unique or empty for all documents in the collection
    + a document should not tag itself
    + subDocCollection is required if a document has subdocuments
    + all subdocuments to a document must be in the same collection
''    --nederlands--
''    + title
''    + date
''    + description
''    + editor
''    + mermaid
''    + sorteercode
''    + toc
    --definition--
    The text for the body of a page with its metadata
''    De romptekst van de webpagina met metagegevens
    --encoding--
    Kramdown with YAML front matter (and occasionally Mermaid diagrams or Liquid or both)
}

Document "*" --> "+ subDocCollection\n0..1" Collection

class Snippet <<Objecttype>> {
    + title: CharacterString [1..1] {classifier}
    + content: CharacterString [1..1]
    --constraints--
    + title uniquely identifies each snippet
''    --nederlands--
''    + title
    --definition--
    Text snippet with its metadata
'' Tekstfragmenten met metagegevens
    --encoding--
