'' title Conceptueel informatiemodel van de praktijkhandleiding

Theme "1" --> "*" Subtheme
Collection "1" *-- "*" Page
TagCollection "*" <-- "*" Page
TagCollection "1" *-- "*" Tag
Tag "*" <-- "*" Page
Tag "0..1" *-- "1" Page
Theme <|-- Trefwoorden
Collection <|-- Theme
Collection <|-- Subtheme
Site "1" -- "*" Collection
Site "1" -- "1" Config
Site "1" .. "*" Page

abstract class Site <<Objecttype>> {
    + config: Config [1..1]
}

class Config <<Gestructureerd datatype>> {
    --
    _config.yml
}

class Collection <<Objecttype>> {
    + name [1..1]
    + alias [0..1]
    + datums: Boolean [1..1]
    + origin [0..1]
    + output: Boolean [1..1]
    + taglists: Boolean [1..1]
    + zoeken: Boolean [1..1]
}

class Layout <<Objecttype>> {
--
Alias of the script that generates the body of the web page.
}

abstract class Theme <<Objecttype>> {
}

Page "1" --> "1" Layout

Page "*" --> "1" Theme

Page "1" --> "0..1" Toc

'' Page::toc "1" -> "1" Page::content

class Page <<Objecttype>> {
    + attribuut [0..*]
    + content [1..1]
    + date: yyyy-mm-dd [0..1]
    + description [0..1]
    + editor [0..1]
    + mermaid: Boolean [0..1]
    + objecttype [0..*]
    + sorteercode [0..1]
    + sorteren: SortOrder [0..1]
    + toc [0..*]
    + title [1..1]
    + weergevenalsdatumontbreekt: Boolean [0..1]
    --
    The body text of the web page (in Kramdown) with YAML front matter.
''    De romptekst van de webpagina (in Kramdown) met YAML front matter.
    --
    SortOrder hoort thuis bij collection?
}

abstract class Subtheme <<Objecttype>> {
}

class Toc <<Objecttype>> {
    + koptekst [1..*]
    --
    Een al dan niet volledige lijst van letterlijk overgenomen hoofdstuk- en paragraaftitels uit de content, op basis waarvan een navigeerbare inhoudsopgave wordt getoond in het websitemenu.
}

abstract class TagCollection <<Objecttype>> {
}

TagCollection "1" -- "1" Collection

abstract class Tag <<Objecttype>> {
    + name [1..1]
}

class Trefwoorden <<Objecttype>> {
    Een voorbeeldthema.
}

class SortOrder << Referentielijst >> {
    + alfabetisch
    + chronologisch
    + sorteercode
}

@enduml
